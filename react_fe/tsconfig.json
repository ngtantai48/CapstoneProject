{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components": ["app/components"],
      "@components/*": ["app/components/*"],
      "@pages": ["app/pages"],
      "@pages/*": ["app/pages/*"],
      "@types": ["types"],
      "@types/*": ["types/*"],
      "@styles": ["app/assets/styles"],
      "@styles/*": ["app/assets/styles/*"],
      "@utils": ["utils"],
      "@utils/*": ["utils/*"],
      "@apis": ["apis"],
      "@apis/*": ["apis/*"],
      "@i18n": ["i18n"],
      "@i18n/*": ["i18n/*"],
      "@assets": ["app/assets"],
      "@assets/*": ["app/assets/*"],
      "@routers": ["routers"],
      "@routers/*": ["routers/*"],
      "@themes": ["themes"],
      "@themes/*": ["themes/*"],
      "@store": ["store"],
      "@store/*": ["store/*"],
      "@socket": ["socket"],
      "@socket/*": ["socket/*"],
    },
  },
  "include": ["src", "craco.config.ts"],
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
    },
  },
}
